<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eltgm.weatherapp.MainActivity"
    >

    <TextView
        android:id="@+id/tvEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDay"
        android:layout_below="@+id/tvEnter"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDayTemp"
        android:layout_below="@+id/tvDay"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="50sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWind"
        android:textAlignment="center"
        android:layout_below="@id/tvDayTemp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOsadki"
        android:textAlignment="center"
        android:layout_below="@+id/tvWind"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ListView.Menu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:saveEnabled="false"
            android:layout_centerVertical="false"
            android:layout_centerInParent="false" />
    </RelativeLayout>

</RelativeLayout>
